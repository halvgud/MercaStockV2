<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:tag="tagLogin"
    tools:context="mx.mercatto.mercastock.Login">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labelUsuario"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blanco"
        android:shadowColor="#9f3032"
        android:labelFor="@+id/InputUsuario"
        android:shadowDx="0" android:shadowDy="0" android:shadowRadius="10"/>

    <EditText
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:padding="10dp"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/InputUsuario"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:digits="aábcdeéfghiíjklmnñoópqrstuúvwxyzAÁBCDEÉFGHIÍJKLMNÑOÓPQRSTUÚVWXYZ0123456789 "
        android:maxLength="15" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labelPass"
        android:id="@+id/labelPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/InputUsuario"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blanco"
        android:shadowColor="#9f3032"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"/>
    <!--android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labelPass"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:shadowColor="#9f3032"
        android:shadowDx="0" android:shadowDy="0" android:shadowRadius="10"-->

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/labelPassword"
        android:layout_alignParentStart="true"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:maxLength="4"
        android:background="@color/white"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@color/input_login"
        android:textColor="@color/white"
        android:text="@string/buttonIniciarSesion"
        android:id="@+id/button2"
        android:layout_marginTop="54dp"
        android:enabled="true"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Sucursal"
        android:id="@+id/textView3"
        android:layout_marginRight="13dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/blanco"
        android:shadowColor="#9f3032"
        android:shadowDx="0" android:shadowDy="0" android:shadowRadius="10"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="@color/blanco"
        android:shadowColor="#9f3032"
        android:shadowDx="0" android:shadowDy="0" android:shadowRadius="10"/>
</RelativeLayout>
